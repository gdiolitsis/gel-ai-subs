<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.subtitles.gelaisubs"
       name="GEL AI Subs"
       version="0.1.0"
       provider-name="GEL">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.subtitle.module"
               library="subtitle.py"/>

    <extension point="xbmc.service"
               library="service.py"
               start="startup"/>

    <extension point="xbmc.addon.metadata">
        <summary>AI-powered automatic subtitles using Whisper</summary>
        <description>
Automatic subtitle generation for Kodi using a Whisper backend server.
        </description>
        <platform>all</platform>
    </extension>

</addon>
